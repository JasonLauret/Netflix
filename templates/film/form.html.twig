{% extends 'base.html.twig' %}

{% form_theme formFilm 'bootstrap_5_layout.html.twig' %}

{% block title %}
    {% if editMode %}
        {% trans %}Editing the movie{% endtrans %}
    {% else %}
        {% trans %}Add a movie{% endtrans %}
    {% endif %}
{% endblock %}

{% block body %}
    <section class="pageformFilm">

        {% if editMode %}
            <h2>{% trans %}Editing the movie{% endtrans %}</h2>
        {% else %}
            <h2>{% trans %}Add a movie{% endtrans %}</h2>
        {% endif %}
        
        {{ form_start(formFilm) }}
            {{ form_row(formFilm.titre) }}
            {{ form_row(formFilm.description) }}
            {{ form_row(formFilm.image) }}
            {{ form_row(formFilm.movie) }}
            {{ form_row(formFilm.duree) }}
            {{ form_row(formFilm.genre) }}
            <button type="submit" class="btn btn-secondary">
                {% if editMode %}
                    {% trans %}Save Changes{% endtrans %} {# Enregistrer les modifications #}
                {% else %}
                    {% trans %}Add a movie{% endtrans %}
                {% endif %}
            </button>
        {{ form_end(formFilm) }}

    </section>
{% endblock %}
