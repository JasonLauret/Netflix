{% extends 'base.html.twig' %}

{% block body %}
    <section class="pageShowFilm">
        <div class="d-flex align-items-center">
            <h2>Affiche du film {{ showFilm.titre }}</h2>
            <a class="btn btn-secondary" href="{{ path('editFilm', {'id': film.id}) }}">Modifier le film</a> 
        </div>
