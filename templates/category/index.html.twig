{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
    <section class="pageListCategory">
        <h2>{% trans %}List of category{% endtrans %}</h2> {# Liste des genres #}
        <a class="btn btn-danger mb-3" href="{{ path('createCategory') }}">{% trans %}Add a category{% endtrans %}</a>
        <table class="table">
            <thead>
                <tr>
                    <th>{% trans %}Name{% endtrans %}</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categorys %}
                <tr>
                    <td>{{ category.name }}</td>
                    <td class="d-flex">
                        <a class="btn btn-warning" href="{{ path('editCategory', {'id': category.id}) }}">{% trans %}To modify{% endtrans %}</a>
                        <div>
                            <button type="button" class="btn btn-danger ms-3" data-bs-toggle="modal" href="#modalDeleteCategory">
                                {% trans %}Delete{% endtrans %}
                            </button>
                            <div class="modal" id="modalDeleteCategory" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="text-center">
                                            <h3 class="fw-bold pt-3">{% trans %}Attention{% endtrans %} !</h3>
                                            <hr>
                                        </div>
                                        <div class="modal-body">
                                            <h4 class="fw-bold text-center">{% trans %}You are about to delete this category{% endtrans %} "{{ category.name }}".</h4>
                                            <p class="text-center">{% trans %}Are you sure{% endtrans %}?</p>
                                        </div>
                                        <div class="modal-footer">
                                            <div class="d-flex justify-content-between">
                                                <a type="button" class="btn btn-secondary" data-bs-dismiss="modal">{% trans %}No{% endtrans %}</a>
                                                <a class="btn btn-danger" href="{{ path('removeCategory', {'id': category.id}) }}">{% trans %}Yes{% endtrans %}</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="3">{% trans %}No category found{% endtrans %}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}
