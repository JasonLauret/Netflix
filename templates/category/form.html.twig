{% extends 'base.html.twig' %}

{% form_theme formCategory 'bootstrap_5_layout.html.twig' %}

{% block title %}
    {% if editMode %}
        {% trans %}Editing the category{% endtrans %}
    {% else %}
        {% trans %}Add a category{% endtrans %}
    {% endif %}
{% endblock %}

{% block body %}
    <section class="pageformCategory">

        {% if editMode %}
            <h2>{% trans %}Editing the category{% endtrans %}</h2>
        {% else %}
            <h2>{% trans %}Add a category{% endtrans %}</h2>
        {% endif %}
        
        {{ form_start(formCategory) }}
            {{ form_row(formCategory.name) }}
            <button type="submit" class="btn btn-secondary">
                {% if editMode %}
                    {% trans %}Save Changes{% endtrans %} 
                {% else %}
                    {% trans %}Add a category{% endtrans %}
                {% endif %}
            </button>
        {{ form_end(formCategory) }}

    </section>
{% endblock %}
