{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<section class="formConnexion">
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}
    {% if app.user %}
        <div class="mb-3 border rounded shadow p-3 mt-5">
            <p>Vous êtes connecté en tant que {{ app.user.username }},</p>
            <a class="btn_form mt-2" href="{{ path('app_logout') }}">Deconnexion</a>
        </div>
    {% else %}
        <form action="{{ path('login') }}" method="post">
            <label for="username">Email:</label>
            <input class="form-control" type="email" id="username" name="_username" value="{{ last_username }}" placeholder="catherine@gmail.com"/>

            <label for="password">Mot de passe:</label>
            <input class="form-control" type="password" id="password" name="_password"/>

            <input type="hidden" name="_target_path" value="/home"/>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn btn-primary">Connexion</button>
        </form>
    {% endif %}
    
</section>
{% endblock %}
